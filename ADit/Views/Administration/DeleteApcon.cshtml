@model ADit.Interfaces.IApconApprovalView

@{
    ViewBag.Title = "Delete Apcon ";
}

@section PageTitle{
    Delete Apcon Type
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteApcon", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="apconId" name="apconId" value="@Model.ApconApprovalTypeId" />

        <div class="text-danger text-center">Are you sure you want to delete the selected Apcon Approval Type ?</div>
        <p class="text-center text-bold" style="font-weight: bold">Apcon Approval Type description</p>
        <p class="text-center text-bold">@Model.Description</p>


        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('DeleteApcon ' + $('#Description').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/Apcon';
            return false;
        });

    });
</script>