@model ADit.Interfaces.IApconApprovalTypePriceView
@section PageTitle{
    Delete Apcon Approval Type Price
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteApconPrice", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="apconPriceId" name="apconPriceId" value="@Model.ApconApprovalTypePriceId" />


        <div class="text-danger text-center">Are you sure you want to delete the selected Apcon Approval Type Price ?</div>
        <p class="text-center text-bold" style="font-weight: bold">Apcon Approval Type Price description</p>
        <p class="text-center text-bold">@Model.Comment</p>



        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('DeleteApconPrice' + $('#Comment').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/ApconPrice';
            return false;
        });

    });
</script>