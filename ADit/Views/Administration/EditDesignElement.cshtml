
@model ADit.Interfaces.IDesignElementView




<a href="/Administration/DesignElement?designElementId=@Model.DesignElementId"> All Design Elements</a>

<div class="jumbotron container">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditDesignElement", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="DesignElementId" value="@Model.DesignElementId" />

        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Design Element Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" class="form-control" name="Description" style="width: 250px;" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>


        <div class="row">
            <div class="form-group ml-3">
                <input class="enabledButton btn btn-primary" id="btnSubmit" name="submitButton" type="submit" value="Submit" />
            </div>
            <div class="form-group ml-3">
                <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">

            </div>
        </div>
    }
</div>



<script type="text/javascript">
        $(document).ready(function() {

          

            $('#Description').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#Description').val().length > 0;


                    if ((description)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
</script>
