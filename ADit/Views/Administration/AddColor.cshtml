@model ADit.Interfaces.IColorView

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class=""> Add Color</h4><br>
<div class="jumbotron container mt-3">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("AddColor", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


      

        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Color Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" name="Description" class="form-control" style="width: 250px;" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>

        <div class="row">
            <div class="form-group" style="margin-left: 15px;">
                <input class="grayButton btn btn-primary" dis id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit" />
            </div>
            <div class="form-group" style="margin-left: 15px;">
                <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>

    }
</div>


@section JavaScriptsIncludes
 {
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnCancel').click(function () {
                window.location.href = '/Administration/DesignElement';
                return false;
            });


            $('#Description').bind('input propertychange',
                function () {


                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#Description').val().length > 0;


                    if ((description)
                    ) {
                        $('#btnSubmit').addClass("btn btn-primary")
                            ;
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}