

@model ADit.Interfaces.ITimeBeltView

@{
    ViewBag.Title = "AddTimeBelt";
}


@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h4 class=""> Add Design Element </h4><br>
<div class="jumbotron container">

    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcesingMessage
        </div>
    </div>
    @using (Html.BeginForm("AddTimeBelt", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Time Belt Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Name" class="form-control" name="Name" style="width: 250px;" type="text" maxlength="50" value="@Model.name" />
            </div>
        </div>




         <div class="form-group">
             <div class="label column">
                 <span style="color:red;">*</span>Description:
             </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" class="form-control" name="Description" style="width: 250px;" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>




        <div align="center">

            <input class="btn btn-primary" disabled id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Submit" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>

         <div>
                You must enter all information above correctly to enable submission.
        </div>

    }
</div>






@section JavaScriptsIncludes
 {
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnCancel').click(function () {
                window.location.href = '/Administration/TimeBelt';
                return false;
            });


            $('#Description').bind('input propertychange',
                function () {


                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#Description').val().length > 0;


                    if ((description)
                    ) {
                        $('#btnSubmit').addClass("btn btn-primary")
                            ;
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}
















































