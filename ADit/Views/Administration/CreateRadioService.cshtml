@model ADit.Interfaces.IRadioServicePriceList
@{
    ViewBag.Title = "Save Radio Service Price";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class=""> Add Radio Service</h4><br>
<div class="jumbotron container mt-3">
    @using (Html.BeginForm("CreateRadioService", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        if (!string.IsNullOrEmpty(Model.ProcessingMessages))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessages

                </div>
            </div>
        }



        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Radio Station Type:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("RadioId", Model.RadioStationType, new { @class = "form-control", style = "width:204px;", id = "RadioId" })
            </div>
        </div>


        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Timing Type:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("TimingId", Model.TimingType, new { @class = "form-control", style = "width:204px;", id = "TimingId" })
            </div>
        </div>
         <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Timing Type:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("MaterialTypeId", Model.MaterialType, new { @class = "form-control", style = "width:204px;", id = "TimingId" })
            </div>
        </div>     
        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>MaterialType:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("MaterialTypeId", Model.TimingType, new { @class = "form-control", style = "width:204px;" })
            </div>
        </div>

          

            <div class="form-group">
                <div class="label column">
                    <span style="color:red;">*</span>Timing Belt:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("TimingBeltId", Model.TimingBelt, new { @class = "form-control", style = "width:204px;", id = "MaterialTypeId" })
                </div>
            </div>

            <div class="form-group">
                <div class="label column">
                    <span style="color:red;">*</span>Enter the amount:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="Amount" name="Amount" class="form-control" type="text" maxlength="100" value="@Model.Amount" />
                </div>
            </div>


            <div class="form-group">
                <div class="label column">
                    <span style="color:red;">*</span>Enter Effective Date:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="DateEffective" name="DateEffective" class="form-control" type="date" maxlength="100" value="@Model.DateEffective" />
                </div>
            </div>

          


            <div class="row">
                <div class="form-group pl-3">
                    <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit" />
                </div>
                <div class="form-group" style="margin-left: 15px;">
                    <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>
            @Html.ValidationSummary()


    }
</div>



@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}

@section JavaScriptsExecution
{
    <script type="text/javascript">



        $("#RadioId").change(function () {
            $("#Amount").trigger('propertychange');

        })

        $("#TimingId").change(function () {
            $("#Amount").trigger('propertychange');

        })

        $("#MaterialTypeId").change(function () {
            $("#Amount").trigger('propertychange');

        })

        
        $(document).ready(function () {

            $('#btnCancel').click(function () {
                window.location.href = '/Administration/RadioService';
                return false;
            });


          

            $("#DateEffective").change(function () {

                $("#Amount").trigger('propertychange');
            })

            

             


            $('#Amount').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                   
                    var dateEffect = $("#DateEffective").val().length > 0;
                   
                    var amount = $("#Amount").val().length > 0;
                    var radio = ($("#RadioId").val() != -1);
                    var timing = ($("#TimingId").val() != -1);
                    var material = ($("#MaterialTypeId").val() != -1);

                    if (( dateEffect && amount && radio
                        && timing && material )/*&& (comment )&& (amount)*//*&&(comment) && (amount)*/
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

