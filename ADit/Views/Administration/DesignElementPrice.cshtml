@model ADit.Interfaces.IDesignElementPriceListView
@{
    ViewBag.Title = "Design Element Price List";
    var hasInfo = (Model != null) && (Model.DesignElementPriceCollection.Any());
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h4 class="mx-auto">Design Element Price List</h4>
<div class="container-fluid" style="padding-top: 10px; margin-bottom: 5px">
    @using (Html.BeginForm("DesignElementPrice", "Administration", FormMethod.Post, new
    {
        id = "filterForm"
    }))
    {
        @Html.AntiForgeryToken()
        if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessage
                </div>
            </div>
        }

        <div class="col-md-12">
            <a href="/Administration/CreateDesignElementPrice" class="btn btn-danger pull-right">Add New Desgin Element Price </a>

        </div>


            <div class="columns" style="font-size: 12px; padding-bottom: 1px; padding-top: 15px;">
                <div class="column" style="font-weight: bold;">
                    Filter Design Element Price List by:
                </div>
            </div>
            <div @*class="columns" style="font-size: 12px; padding-bottom: 2px; width: 100%;*@>


                <div class="row">

                    <div class="form-group">
                        <div class="label column">
                            Service Code:
                        </div>
                        <div class="data column " style="overflow: hidden;">
                            <input id="SelectedServiceTypeCode" class="form-control" name="selectedDescription" style="width: 200px;" type="text" value="@Model.SelectedServiceTypeCode" />
                        </div>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="form-group ml-3">
                    <input class=" btn btn-primary" id="btnFilter" name="submitButton" style="width: 100px;" type="submit" value="Filter" />
                </div>


                <div class="form-group ml-3">
                    <a href="/Administration/DesignElementPrice" class="btn btn-danger">Reset</a>
                </div>

            </div>

        if (hasInfo)
        {
            <div class="columns" style="font-size: 12px; width: 100%; font-style: italic;">
                Hold down the shift key to sort with multiple columns.
            </div>
                <div class="columns" style="width: 100%;">
                    <div class="column" style="width: 100%;">
                        <table id="tableList" class="tablesorter" style="border-color: transparent; width: 100%;">
                            <colgroup></colgroup>
                            <thead style="width: 100%;">
                                <tr style="width: 100%;">
                                    <th>Id</th>
                                    <th>Design Type</th>
                                    <th>Service Code</th>
                                    <th>Amount</th>

                                    <th>Date Created</th>
                                    <th>Effective Date</th>
                                    <th>Date Inactive</th>
                                    <th>Is Active?</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.DesignElementPriceCollection)
                                {
                                <tr style="width: 100%;">
                                    <td style="border: 1px solid #FFF !important;">
                                        @d.DesignElementPriceId
                                    </td>
                                    <td style="border: 1px solid #FFF !important;">

                                        @d.Description
                                    </td>
                                    <td>
                                        @d.ServiceTypeCode
                                    </td>
                                    <td>
                                        @d.Amount.ToString("#,##0")
                                    </td>

                                    <td>
                                        @d.DateCreated.ToString("d")
                                    </td>
                                    <td>
                                        @d.EffectiveDate.ToString("d")
                                    </td>
                                    <td>
                                        @DisplayHelper.DisplayDate(d.DateInactive)
                                    </td>
                                    <td style="border: 1px solid #FFF !important;">
                                        @DisplayHelper.YesOrNo(d.IsActive)
                                    </td>

                                    @if (d.IsActive)
                                    {
                                        <td style="border: 1px solid #FFF !important;">
                                            <a class="popupUrl" id="bm_edit_@(d.DesignElementPriceId)" href="/Administration/EditDesignElementPrice?designElementPriceId=@d.DesignElementPriceId">Edit</a>
                                        </td>
                                        <td style="border: 1px solid #FFF !important;">
                                            <a class="popupUrl" id="bm_view_@(d.DesignElementPriceId)" href="/Administration/DeleteDesignElementPrice?designElementPriceId=@d.DesignElementPriceId">Delete</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                        <td class="text-center" style="border: 1px solid #FFF !important;">
                                            <span style="color:white; padding-right:1em; padding-left:1em; background-color:red;">Deleted</span>
                                        </td>
                                    }

                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="columns" style="margin-top: 10px; width: 100%;">
                    <div class="column">
                        @DisplayHelper.TablePager(Model.DesignElementPriceCollection.Count())
                    </div>
                </div>
        }
        else
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    No Material meets search criteria or none is setup
                </div>
            </div>
        }
    }
</div>

</div>

@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.widgets.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>
}

@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function() {
            $(function() {
                $('#tableList').tablesorter({
                    theme: 'blue',
                    headers: { 3: { sorter: false }, 4: { sorter: false } },
                    widthFixed: true,
                    widgets: ['zebra'],
                    size: 10
                }).tablesorterPager({ container: $("#pager"), size: 10 });
            });

            // popup page
            var $popupDialog = $('<div></div>').dialog({
                autoOpen: false,
                width: 750,
                modal: true,
                title: '',
                closeText: "",
                closeOnEscape: true,
                resizable: true
            });


            $('.popupUrl').click(function() {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });

            $('#bm_add_0').click(function() {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });

        });
    </script>
}

@section Stylesheets
{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/tablesorter/theme.blue.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/tablesorter/jquery.tablesorter.pager.css" rel="stylesheet" type="text/css"/>
}