@model ADit.Interfaces.IPrintMediaModelView


<div class="container-fluid">
    <div class="row">

        <div class="receipt-main col-xs-10 col-sm-10 col-md-12 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="receipt-header">
                    <div class="col-xs-6 col-sm-6 col-md-6">

                    </div>

                </div>
            </div>

            <div class="row">
                <div class="receipt-header receipt-header-mid col-12">
                    <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                        <div class="receipt-right">



                            <h5><b>Mobile :</b> @Model.PhoneNumber</h5>

                            <h5> <b>Email :</b> @Model.Email</h5>


                            <h5><b>Date :</b>@Model.DateCreated</b></h5>

                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-12 ">
                        <div class=" row ml-0 mt-2">
                            <h6 class=""><b>Order Title:</b></h6>
                            <h6> @Model.OrderTitle</h6>
                        </div>

                    </div>
                </div>
            </div>
            <div>
                <div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>Options</th>
                                <th>Selections</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-9">Do you Have Artwork</td>
                                @{
                                    if (Model.MaterialDigitalFileId > 0)
                                    {
                                        <td class="col-md-7 btn btn-success">Artwork Uploaded</td>
                                    }
                                    else
                                    {
                                        <td class="col-md-7"> No Artwork Uploaded</td>
                                    }



                                }

                            </tr>
                            <tr>
                                <td class="col-md-9">Apcon Type</td>


                                <td class="col-md-7 ">@Model.ApconType</td>


                            </tr>


                            <tr>
                                <td class="col-md-9">Apcon Type Price</td>


                                <td class="col-md-7 ">@Model.ApconAmount</td>


                            </tr>
                            <tr>
                                <td class="col-md-9">Apcon Number</td>


                                <td class="col-md-7 ">@Model.ApconApprovalNumber</td>


                            </tr>
                            <tr>
                                <td class="col-md-9">Print Category</td>

                                <td class="btn-btn-success col-md-3"> @Model.Category</td>


                            </tr>

                            <tr>
                                <td class="col-md-9">Design Element</td>


                                <td class="col-md-7 ">@Model.DesignElement</td>


                            </tr>
                            <tr>
                                <td class="col-md-9">Design Element Price</td>


                                <td class="col-md-7 ">@Model.DesignElementAmount</td>


                            </tr>

                            <tr>
                                <td class="col-md-9">Duration Type</td>

                                <td class="bg-success col-md-3"> @Model.DurationTypes</td>



                            </tr>










                        </tbody>
                    </table>
                </div>

                <table class="col-md-12">
                    <thead>
                        <tr>
                            <th class="">NewsPaper</th>
                            <th class="">Service Type</th>
                            <th class="">Number Of Insert</th>
                            <th class="">Prices</th>
                        </tr>
                    </thead>

                    <tbody>


                        @{

                            foreach (var j in Model.NewspapersList)
                            {
                                var Index = Model.NewspapersList.IndexOf(j);
                                var printServiceType = Model.PrintServciceTypeList[Index];
                                var NumberOfInsert = Model.NummberOfInsertList[Index];
                                var Price = Model.PricesList[Index];

                                var total = Price * NumberOfInsert;

                                <tr>




                                    <td class="">@j</td>
                                    <td class="">@printServiceType</td>
                                    <td class="">@NumberOfInsert</td>
                                    <td class="">@total.ToString("#,0.0")</td>

                                </tr>

                            }



                        }

                    </tbody>

                </table>
                <div class="col-md-offset-3 text-md-right">
                    <h2><strong>Total: </strong></h2>
                    <h2 class="text text-danger"><strong>@Model.TotalAmount.ToString("#,0.0")</strong></h2>
                </div>


            </div>

        </div>



</div>