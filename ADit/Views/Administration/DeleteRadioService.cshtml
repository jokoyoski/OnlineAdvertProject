@model ADit.Interfaces.IRadioServicePriceList
@section PageTitle{
    Delete Radio Service Price
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessages
        </div>
    </div>
    @using (Html.BeginForm("DeleteRadioService", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="radioServiceId" name="radioServiceId" value="@Model.Id" />


        <div class="text-danger text-center">Are you sure you want to delete the Selected Radio Service Price ?</div>
        <p class="text-center text-bold" style="font-weight: bold">Radio Service Amount</p>
        <p class="text-center text-bold">@Model.Amount</p>


       



        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('DeleteRadioService' + $('#Comment').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/RadioService';
            return false;
        });

    });
</script>