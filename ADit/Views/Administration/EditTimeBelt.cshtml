@model ADit.Interfaces.ITimeBeltView


@section PageTitle{
    Update Color
}




<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcesingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditTimeBelt", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="TimeBeltId" name="TimeBeltId" value="@Model.TimeBeltId" />




        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red;">*</span> Name:
             
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Name" name="Name" style="width: 250px;" type="text" maxlength="50" value="@Model.name" />
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red;">*</span>Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" name="Description" style="width: 250px;" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>


        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            
            <div class="row">
                <div class="column" style="margin-left: 195px;">
                    <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Submit" />
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
            </div>
          
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>



<script type="text/javascript">
    $(document).ready(function () {

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/TimeBelt';
            return false;
        });

        $("#Name").change(function () {

            $("#Description").trigger("propertychange");
        })


        $('#Description').bind('input propertychange',
            function () {


                $('#btnSubmit').prop("class", "grayButton");
                $('#btnSubmit').prop("disabled", true);

                var description = $('#Description').val().length > 0;
                var name = $('#Name').val().length > 0;

                if ((description) && (name)) {
                    $('#btnSubmit').prop("class", "enabledButton");
                    $('#btnSubmit').prop("disabled", false);
                }
            });



    });
</script>