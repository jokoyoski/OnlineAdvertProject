@model ADit.Interfaces.IMaterialTypeTimingListView

@{
    ViewBag.Title = "Timing List";
    var hasInfo = (Model != null) && (Model.MaterialTypeTimingCollection.Any());
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class="mx-auto">Timing List</h4><br>
<div class="container-fluid" style="padding-top: 10px; margin-bottom: 5px">
    
    @using (Html.BeginForm("MaterialTiming", "Administration", FormMethod.Post, new
    {
        id = "filterForm"
    }))
    {
        @Html.AntiForgeryToken()
        if (!string.IsNullOrEmpty(Model.ProcessingMessages))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessages
                </div>
            </div>
        }

        <a href="/Administration/CreateMaterialTiming" class="btn btn-danger float-right">Add Material Type Timing</a>


        <div class="columns" style="font-size: 12px; padding-bottom: 1px; padding-top: 15px;">
            <div class="column" style="font-weight: bold;">
                Filter Material List by:
            </div>
        </div>
        <div class="form-inline" style="font-size: 12px; padding-bottom: 2px; width: 100%;">
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column">
                        Material Type Timing Id:
                    </div>
                    <div class="data column" style="width: 220px; ">
                        <input class="form-control" id="selectedMaterialTypeTimingId" name="selectedMaterialTypeTimingId" style="width: 200px;" type="text" value="@Model.SelectedMaterialTypeTimingId"/>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column">
                        Timing Id:
                    </div>
                    <div class="data column" style="width: 220px; ">
                        <input class="form-control" id="selectedTimingId" name="selectedTimingId" style="width: 200px;" type="text" value="@Model.SelectedTimingId"/>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column">
                        Material Type Id:
                    </div>
                    <div class="data column" style="width: 220px; text-align: right;">
                        <input class="form-control" id="selectedMaterialTypeId" name="selectedMaterialTypeId" style="width: 200px;" type="text" value="@Model.SelectedMaterialTypeTimingId"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="columns form-inline" style="font-size: 12px; margin-top: 10px; padding-bottom: 2px; width: 100%;">
            <div class="column">
                <input class="btn btn-primary enabledButton" id="btnFilter" name="submitButton" style="width: 100px;" type="submit" value="Filter"/>
            </div>
            <div class="column ml-3">
                <a href="/Administration/MaterialTiming" class="btn btn-danger">Reset</a>
            </div>

        </div>
        if (hasInfo)
        {
            <div class="columns" style="font-size: 12px; width: 100%; font-style: italic;">
                Hold down the shift key to sort with multiple columns.
            </div>
            <div class="columns" style="width: 100%;">
                <div class="column" style="width: 100%;">
                    <table id="tableList" class="tablesorter" style="border-color: transparent; width: 100%;">
                       
                        <thead style="width: 100%;">
                        <tr style="width: 100%;">
                            <th>Id</th>
                            <th>Service Code</th>
                            <th>Material Type</th>
                            <th>Material Timing</th>

                            <th>Is Active ?</th>
                            <th colspan="2">
                                <a id="bm_add_0" class="popupUrl" href="/Administration/CreateMaterialTiming">Add Timing </a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var d in Model.MaterialTypeTimingCollection)
                        {
                            <tr style="width: 100%;">
                                <td style="border: 1px solid #FFF !important;">
                                    @d.MaterialTypeTimingId

                                </td>
                                <td>
                                    @d.ServiceTypeCode
                                </td>
                                <td>

                                    @d.MaterialDescription
                                </td>
                                <td>
                                    @d.TimingDescription

                                </td>

                                <td style="border: 1px solid #FFF !important;">
                                    @DisplayHelper.YesOrNo(d.IsActive)
                                </td>

                                @if (d.IsActive == true)
                                {
                                    <td style="border: 1px solid #FFF !important;">
                                        <a class="popupUrl" id="bm_edit_@(d.MaterialTypeTimingId)" href="/Administration/EditMaterialTiming?materialTypeTimingId=@d.MaterialTypeTimingId">Edit </a>
                                    </td>

                                    <td style="border: 1px solid #FFF !important;">
                                        <a class="popupUrl" id="bm_view_@(d.MaterialTypeTimingId)" href="/Administration/DeleteMaterialTiming?materialTimingId=@d.MaterialTypeTimingId">Delete </a>
                                    </td>
                                }
                                else
                                {
                                    <td></td>
                                    <td class="text-center" style="border: 1px solid #FFF !important;">
                                        <span style="color:white; padding-right:1em; padding-left:1em; background-color:red;">Deleted</span>
                                    </td>
                                }
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="columns" style="margin-top: 10px; width: 100%;">
                <div class="column">
                    @DisplayHelper.TablePager(Model.MaterialTypeTimingCollection.Count())
                </div>
            </div>
        }
        else
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    No Material meets search criteria or none is setup
                </div>
            </div>
        }
    }
</div>

@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.widgets.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>
}

@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function() {
            $(function() {
                $('#tableList').tablesorter({
                    theme: 'blue',
                    headers: { 3: { sorter: false }, 4: { sorter: false } },
                    widthFixed: true,
                    widgets: ['zebra'],
                    size: 10
                }).tablesorterPager({ container: $("#pager"), size: 10 });
            });

            // popup page
            var $popupDialog = $('<div></div>').dialog({
                autoOpen: false,
                width: 750,
                modal: true,
                title: '',
                closeText: "",
                closeOnEscape: true,
                resizable: true
            });


            $('.popupUrl').click(function() {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });

            $('#bm_add_0').click(function() {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });

        });
    </script>
}

@section Stylesheets
{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/tablesorter/theme.blue.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/tablesorter/jquery.tablesorter.pager.css" rel="stylesheet" type="text/css"/>
}