
@model ADit.Interfaces.ITimingView




<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditTiming", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="TimingId" name="TimingId" value="@Model.TimingId" />


        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" class="form-control" name="Description" style="width: 250px;" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>



        <div class="col-12  pt-3">

            <div class="pl-3 row">
                <div class="row">
                    <div>
                        <input disabled class="btn btn-primary" id="btnSubmit" name="submitButton" style="width:80px;" type="submit" value="Submit" />

                    </div>

                    <div class="pl-4">
                        <a href="" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>

                    </div>

                </div>

            </div>

            <div>
                You must enter all information above correctly to enable submission.
            </div>

        </div>
    }
</div>



    <script type="text/javascript">
        $(document).ready(function() {

            $("#btnCancel").click(function () {

                window.location.href = '/Administration/Timing';
                return false;
            })

            @*$('#btnCancel').click(function() {
                window.location.href = '/Administration/GradeList?companyId=' + @Model.CompanyId;
                return false;
            });*@

            //"span.ui-dialog-title").text('Edit Timing' );

            $('#Description').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#Description').val().length > 0;


                    if ((description)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>

