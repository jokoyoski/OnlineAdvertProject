@model ADit.Interfaces.IMaterialTypeTimingView
@{
    ViewBag.Title = "Save Material Type Timing";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class="">Create Material Timing</h4><br>
<div class="jumbotron container">
    @using (Html.BeginForm("CreateMaterialTiming", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessage
                    @Html.ValidationSummary()
                </div>
            </div>
        }

        <div class="form-horizontal">



            <div class="form-group">
                <div class="label column">
                    <span style="color:red;">*</span> Service Type:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("ServiceTypeCode", Model.ServiceType, new { @class="form-control", style = "width:204px;", id = "ServiceTypeCode" })
                </div>
            </div>

            <div class="form-group">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span style="color:red;">*</span>Material Type:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("MaterialTypeId", Model.MaterialType, new { @class="form-control", style = "width:204px;", id = "MaterialTypeId"})
                </div>
            </div>


            <div class="form-group">
                <div class="label column">
                    <span style="color:red;">*</span>Timing Type:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("TimingId", Model.TimingType, new { @class="form-control", style = "width:204px;", id = "TimingId"})
                </div>
            </div>


            


            <div class="row">
                <div class="form-group ml-3">
                    <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit"/>
                </div>
                <div class="form-group ml-2">
                    <input id="btnCancel" class="btn btn-danger" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel"/>
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>
        </div>
    }

</div>

@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">


        $("#MaterialTypeId").change(function() {
            $("#ServiceTypeCode").trigger('propertychange');

        });

        $("#ServiceTypeCode").change(function() {
            $("#ServiceTypeCode").trigger('propertychange');

        });

        $("#TimingId").change(function() {
            $("#ServiceTypeCode").trigger('propertychange');

        });


        $(document).ready(function() {

            $('#btnCancel').click(function() {
                window.location.href = '/Administration/MaterialTiming';
                return false;
            });


            $('#ServiceTypeCode').bind('input propertychange',
                function() {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);


                    var branding = ($("#MaterialTypeId").val() != -1);
                    var service = ($("#ServiceTypeCode").val() != -1);
                    var timing = ($("#TimingId").val() != -1);

                    if ((service && branding && timing)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css"/>
}