
<h2>Delete Design Element</h2>
@model ADit.Interfaces.IDesignElementView


@section PageTitle{
    Delete Design Element
}



<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteDesignElement", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="DesignElementId" value="@Model.DesignElementId" />

        <div class="text-danger text-center">Are you sure you want to delete the selected Delete Design Element</div>
        <p class="text-center text-bold" style="font-weight: bold">Delete Design Element description</p>
        <p class="text-center text-bold">@Model.Description</p>




        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <a href="/Administration/DesignElement" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>

        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Design Element');

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/DesignElement';
            return false;
        });

    });
</script>


