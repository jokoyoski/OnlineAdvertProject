@model ADit.Interfaces.IBrandingView


<div class="container-fluid">
    <div class="row">

        <div class="receipt-main col-xs-10 col-sm-10 col-md-12 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="receipt-header">
                    <div class="col-xs-6 col-sm-6 col-md-6">

                    </div>

                </div>
            </div>

            <div class="row">
                <div class="receipt-header receipt-header-mid col-12">
                    <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                        <div class="receipt-right">



                            <h5><b>Mobile :</b> @Model.PhoneNumber</h5>

                            <h5> <b>Email :</b> @Model.Email</h5>


                            <h5><b>Date :</b>@Model.DateCreated</b></h5>

                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-12 ">
                        <div class=" row ml-0 mt-2">
                            <h6 class=""><b>Order Title:</b></h6>
                            <h6> @Model.OrderTitle</h6>
                        </div>

                    </div>
                </div>
            </div>
            <div>

                <div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>Options</th>
                                <th>Selections</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-9">Do you Have Material </td>

                                <td class="col-md-7 btn-btn-success">@Model.BrandingMaterial</td>






                            </tr>
                            <tr>
                                <td class="col-md-9">Material Price</td>

                                <td class="col-md-7 btn btn-success">@Model.BrandingMaterialAmount</td>


                            </tr>
                            <tr>
                                <td class="col-md-9">Additional Color</td>

                                <td class="btn-btn-success col-md-3"> @Model.AdditionalColorInfo</td>


                            </tr>



                            <tr>
                                <td class="col-md-9">Design Element</td>

                                <td class="bg-success col-md-3"> @Model.DesignElement</td>



                            </tr>



                            <tr>
                                <td class="col-md-9">Design Element Price</td>

                                <td class="bg-success col-md-3"> @Model.DesignElementAmount</td>



                            </tr>
                            <tr>
                                <td class="col-md-9">Digital file</td>

                                @{

                                    if (Model.DesignDigitalFileId > 0)
                                    {
                                        <td class="bg-success col-md-3"> Digital file Uploaded</td>
                                    }
                                    else
                                    {
                                        <td class="bg-danger col-md-3"> No digital File Uploaded</td>
                                    }

                                }




                            </tr>



                            <tr>


                                <td class="col-md-9">Additional Info</td>
                                <td class="bg-success col-md-3"> @Model.AdditionalInformation</td>


                            </tr>






                        </tbody>
                    </table>
                </div>

                <table class="col-md-12">
                    <thead>
                        <tr>

                            <th class="">Colors</th>


                        </tr>
                    </thead>

                    <tbody>


                        @{

                            foreach (var j in Model.Colors)
                            {



                                <tr>

                                    <td class="" style="width:100px;">@j</td>





                                </tr>

                            }



                        }

                    </tbody>

                </table>
                <div class="col-md-offset-3 text-md-right">
                    <h2><strong>Total: </strong></h2>
                    <h2 class="text text-danger"><strong>@Model.TotalAmount.ToString("#,0.0")</strong></h2>
                </div>


            </div>

        </div>



</div>