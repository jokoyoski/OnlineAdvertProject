
<h2>Edit Print Service Type</h2>
@model ADit.Interfaces.IPrintServiceTypeView

@section PageTitle{
    Edit Print Service Type
}


<a href="/Print/PrintServiceType?printServiceTypeId=@Model.PrintServiceTypeId"> All Print Service Types</a>

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditPrintServiceType", "Print", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="PrintServiceTypeId" value="@Model.PrintServiceTypeId" />

        <div class="form-group">
            <div class="label column">
                <span style="color:red;">*</span>Service Type Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" class="form-control" name="Description" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>


        <div class="form-inline pl-3">
            <input class="enabledButton btn btn-primary" id="btnSubmit" name="submitButton" type="submit" value="Submit" />
            <div class="pl-3">
                <input id="btnCancel" class="btn btn-danger enabledButton " name="submitButton" x;"
                       type="submit" value="Cancel" />
            </div>
        </div>

       
    }
</div>



    <script type="text/javascript">
        $(document).ready(function() {

            $('#btnCancel').click(function() {
                window.location.href = '/Print/PrintServiceType/';
                return false;
            });


            $('#Description').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#Description').val().length > 0;


                    if ((description)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
