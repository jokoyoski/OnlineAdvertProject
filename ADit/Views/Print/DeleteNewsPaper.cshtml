
@{
    ViewBag.Title = "Delete NewsPaper";
}

<h2>Delete NewsPaper</h2>
@model ADit.Interfaces.INewsPaperView




<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteNewsPaper", "Print", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="NewsPaperId" value="@Model.NewsPaperId" />

        <div class="columns" align="center" style="width: 100%; padding-top: 5px;">
            <div class="label center" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red;">*</span>Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                Do you want to Delete NewsPaper Entry? @Model.Description?
                <input id="Description" name="Description" style="width: 250px;" type="hidden" maxlength="50" value="@Model.Description" />
            </div>
        </div>

        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="cancelButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>

    }
</div>




    <script type="text/javascript">
        $(document).ready(function () {
            $("span.ui-dialog-title").text('Delete Newspaper ');

            $('#btnCancel').click(function () {
                window.location.href = '/Print/NewsPaper';
                return false;
            });

        });
    </script>