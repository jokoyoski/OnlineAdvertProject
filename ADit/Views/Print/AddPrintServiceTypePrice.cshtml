
@model ADit.Interfaces.IPrintServiceTypePriceView

@{
    ViewBag.Title = "Add Print Service Type Price";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<h4 class="">  Add Print Service Type Price</h4><br>
                                                <div class="jumbotron container m-auto">
                                                    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                                                        <div class="validation-summary-errors">
                                                            @Html.ValidationSummary()
                                                            @Model.ProcessingMessage
                                                        </div>
                                                    </div>
                                                    @using (Html.BeginForm("AddPrintServiceTypePrice", "Print", FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()


                                                        <input type="hidden" name="printServiceTypePrice" value="@Model.PrintServiceTypePriceId" />

                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Newspaper Type:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                @Html.DropDownList("NewsPaperId", Model.PrintNewsPaperCollection, new { @class = "form-control", style = "width:204px;", id = "NewsPaperId" })
                                                            </div>
                                                        </div>



                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Service Type:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                @Html.DropDownList("PrintServiceTypeId", Model.PrintServiceTypeCollection, new { @class = "form-control", style = "width:204px;", id = "PrintServiceTypeId" })
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Service Color:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                @Html.DropDownList("PrintServiceColorId", Model.PrintServiceColorCollection, new { @class = "form-control", style = "width:204px;", id = "PrintServiceColorId" })
                                                            </div>
                                                        </div>


                                                        

                                                      

                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Print Media Type:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                @Html.DropDownList("PrintMediaTypeId", Model.PrintMediaTypeCollection, new { @class = "form-control", style = "width:204px;", id = "PrintMediaTypeId" })
                                                            </div>
                                                        </div>



                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Amount:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                <input class="form-control" id="amount" name="amount" style="width: 250px;" type="text" maxlength="50" value="@Model.Amount" />
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Comment:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                <input class="form-control" id="comment" name="comment" style="width: 250px;" type="text" maxlength="50" value="@Model.Comment" />
                                                            </div>
                                                        </div>


                                                        <div class="form-group">
                                                            <div class="label column">
                                                                <span style="color:red;">*</span> Effective Date:
                                                            </div>
                                                            <div class="data column" style="overflow: hidden;">
                                                                <input class="form-control" id="EffectiveDate" name="EffectiveDate" style="width: 204px;" type="date" maxlength="100" value="@Model.EffectiveDate" />
                                                            </div>
                                                        </div>

                                                        @*<div class="form-group">
                <div class="label column">
                    <span class="required">*</span>Enter Date Inactive:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input class="form-control" id="dateInactive" name="dateInactive" style="width: 250px;" type="date" maxlength="50" value="@Model.DateInactive" />
                </div>
            </div>*@




                                                        <div class="form-group form-inline">
                                                            <div class="column pl-3">
                                                                <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Submit" />
                                                            </div>
                                                            <div class="column pl-3">
                                                                <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                                                                       type="submit" value="Cancel" />
                                                            </div>
                                                            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">

                                                            </div>
                                                        </div>
                                                    }
                                                </div>





@section JavaScriptsIncludes
 {
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function() {

           $('#btnCancel').click(function() {
                window.location.href = '/Print/PrintServiceTypePrice'
                return false;
            });
            $("#PrintServiceTypeId").change(function () {
                $("#comment").trigger('propertychange');

            })
            $("#PrintMediaTypeId").change(function () {
                $("#comment").trigger('propertychange');

            })
            $("#NewsPaperId").change(function () {
                $("#comment").trigger('propertychange');

            })

            
            $("#amount").change(function () {
                $("#comment").trigger('propertychange');

            })

            //$("#dateInactive").change(function () {
            //    $("#comment").trigger('propertychange');

            //})

            $("#EffectiveDate").change(function () {
                $("#comment").trigger('propertychange');

            })

            $('#comment').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#comment').val().length > 0;
                    var amount = $('#amount').val().length > 0 && $('#amount').val() > 0;
                    var printservicetype = $("#PrintServiceTypeId").val() != -1;
                    var printmediatype = $("#PrintMediaTypeId").val() != -1;
                    var newspaper = ($("#NewsPaperId").val() != -1);
                  //  var dateIn = $("#dateInactive").val().length > 0;
                    var dateEf = $("#EffectiveDate").val().length > 0;
                    

                    if ((description && printservicetype && newspaper && dateEf && amount &&printmediatype)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

