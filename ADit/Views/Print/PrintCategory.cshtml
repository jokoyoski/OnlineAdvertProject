@model ADit.Interfaces.IPrintCategoryListView
@{
    ViewBag.Title = "Print Category List";
}

@{
    
    var hasInfo = (Model != null) && (Model.PrintCategoryCollection.Any());
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class="mx-auto">Print Category List</h4><br>
<div class="container-fluid" style="padding-top: 10px; margin-bottom: 5px">
    
    @using (Html.BeginForm("PrintCategory", "Print", FormMethod.Post, new
    {
        id = "filterForm"
    }))
    {
        @Html.AntiForgeryToken()
        if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessage
                </div>
            </div>
        }

        <a href="/Print/AddPrintCategory" class="btn btn-danger float-right">Add Print Category </a>


        <div class="columns" style="font-size: 12px; padding-bottom: 1px; padding-top: 15px;">
            <div class="column" style="font-weight: bold;">
                Filter Material List by:
            </div>
        </div>

        <div class="row">
            <div>
                <div class="label column" style="width: 130px; ">
                    Id:
                </div>
                <div class="data column" style="width: 220px; text-align: right;">
                    <input id="selectedPrintCategoryId" class="form-control" name="selectedPrintCategoryId" style="width: 200px;" type="text" value="@Model.SelectedPrintCategoryId" />
                </div>
            </div>
            <div>
                <div class="label column" style="width: 155px; text-align: right;">
                    Description contains:
                </div>
                <div class="data column" style="width: 220px; text-align: right;">
                    <input id="selectedDescription" class="form-control" name="selectedDescription" style="width: 200px;" type="text" value="@Model.SelectedDescription" />
                </div>
            </div>
           

        </div>
        @*<div class="columns" style="font-size: 12px; padding-bottom: 2px; width: 100%;">
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column" style="width: 130px; text-align: right;">
                        Id:
                    </div>
                    <div class="data column" style="width: 220px; text-align: right;">
                        <input id="selectedPrintCategoryId" name="selectedPrintCategoryId" style="width: 200px;" type="text" value="@Model.SelectedPrintCategoryId" />
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column" style="width: 155px; text-align: right;">
                        Description contains:
                    </div>
                    <div class="data column" style="width: 220px; text-align: right;">
                        <input id="selectedDescription" name="selectedDescription" style="width: 200px;" type="text" value="@Model.SelectedDescription" />
                    </div>
                @*</div>*@
          
        <div class="row pb-2" style="font-size: 12px; margin-top: 10px; padding-bottom: 2px; width: 100%;">
            <div class="column pl-3">
                <input class="enabledButton btn btn-primary" id="btnFilter" name="submitButton" style="width: 100px;" type="submit" value="Filter" />
            </div>
            <div class="column pl-3">
                <a href="/Print/PrintCategory" class="btn btn-danger">Reset</a>
            </div>
            
        </div>
        if (hasInfo)
        {
            <div class="columns" style="font-size: 12px; width: 100%; font-style: italic;">
                Hold down the shift key to sort with multiple columns.
            </div>
            <div class="columns" style="width: 100%;">
                <div class="column" style="width: 100%;">
                    <table id="tableList" class="tablesorter" style="border-color: transparent; width: 100%;">
                        <colgroup>
                            <col style="width: 50px;" />
                            <col style="width: 150px;" />
                            <col style="width: 80px;" />
                            <col style="width: 80px;" />
                            <col style="width: 80px;" />
                        </colgroup>
                        <thead style="width: 100%;">
                            <tr style="width: 100%;">
                                <th>Id</th>
                                <th>Description</th>
                                <th>Is Active?</th>
                                <th colspan="2">
                                    
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.PrintCategoryCollection)
                            {
                            <tr style="width: 100%;">
                                <td style="border: 1px solid #FFF !important;">
                                    @d.PrintCategoryId
                                </td>
                                <td>
                                    @d.Description
                                </td>
                                <td style="border: 1px solid #FFF !important;">
                                    @DisplayHelper.YesOrNo(d.IsActive == true)
                                </td>

                                @if (d.IsActive == true)
                                {
                                    <td style="border: 1px solid #FFF !important;">
                                        <a class="popupUrl" id="bm_edit_@(d.PrintCategoryId)" href="/Print/EditPrintCategory?printCategoryId=@d.PrintCategoryId">Edit</a>
                                    </td>
                                    <td style="border: 1px solid #FFF !important;">
                                        <a class="popupUrl" id="bm_delete_@(d.PrintCategoryId)" href="/Print/DeletePrintCategory?printCategoryId=@d.PrintCategoryId">Delete</a>

                                    </td>

                                }
                                else
                                {
                                    <td></td>
                                    <td class="text-center" style="border: 1px solid #FFF !important;">
                                        <span style="color:white; padding-right:1em; padding-left:1em; background-color:red;">Deleted</span>
                                    </td>
                                }



                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="columns" style="margin-top: 10px; width: 100%;">
                <div class="column">
                    @DisplayHelper.TablePager(Model.PrintCategoryCollection.Count())
                </div>
            </div>
        }
        else
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    No Material meets search criteria or none is setup
                </div>
            </div>
        }
    }
</div>
@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.widgets.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>
}
@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $('#tableList').tablesorter({
                    theme: 'blue',
                    headers: { 3: { sorter: false }, 4: { sorter: false }},
                    widthFixed: true,
                    widgets: ['zebra'],
                    size: 10
                }).tablesorterPager({ container: $("#pager"), size: 10 });
            });

            // popup page
            var $popupDialog = $('<div></div>').dialog({
                autoOpen: false,
                width: 750,
                modal: true,
                title: '',
                closeText: "",
                closeOnEscape: true,
                resizable: true
            });


            $('.popupUrl').click(function () {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });

            $('#bm_add_0').click(function () {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });

        });
    </script>
}
@section Stylesheets
{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
    <link href="/Content/tablesorter/theme.blue.css" rel="stylesheet" type="text/css" />
    <link href="/Content/tablesorter/jquery.tablesorter.pager.css" rel="stylesheet" type="text/css" />
}


