
@model ADit.Interfaces.IPrintServiceTypePriceView

@*@{
        ViewBag.Title = "Delete Print Service Type";
    }*@

@section PageTitle{
    Delete Print Service Type
}


<a href="/Print/PrintServiceTypePrice?printServiceTypePriceId=@Model.PrintServiceTypePriceId"> All Print Service Types</a>

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeletePrintServiceTypePrice", "Print", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="PrintServiceTypePriceId" value="@Model.PrintServiceTypePriceId" />

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                Delete Print Service Type Price Entry?
                <input id="Description" name="Description" style="width: 250px;" type="hidden" maxlength="50" value="@Model.Comment" />
            </div>
        </div>


        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="enabledButton" id="btnSubmit" name="submitButton" style="width: 80px;"  type="submit" value="Delete" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="enabledButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">

            </div>
        </div>
    }
</div>



<script type="text/javascript">
        $(document).ready(function() {

            $('#btnSubmit').prop("class", "enabledButton");
                        $('#btnSubmit').prop("disabled", false);

        });
</script>

