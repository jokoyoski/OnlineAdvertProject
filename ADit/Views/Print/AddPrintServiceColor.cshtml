
@model ADit.Interfaces.IPrintServiceColor

@{
    ViewBag.Title = "Add Print Service Color";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class="">Add Print Service Color</h4><br>
<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()

        </div>
    </div>
    @using (Html.BeginForm("AddPrintServiceColor", "Print", FormMethod.Post))
    {
        @Html.AntiForgeryToken()




        <div class="form-group">

            <div class="label column">
                <span style="color:red;">*</span>Print Service Color:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" class="form-control" name="PrintServiceTypeColor" style="width: 250px;" type="text" maxlength="50" value="@Model.PrintServiceTypeColor" />
            </div>
        </div>

        <div class="row">
            <div class="form-group" style="margin-left: 15px;">
                <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;"  type="submit" value="Submit" />
            </div>
            <div class="form-group" style="margin-left: 15px;">
                <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
        </div>

    }
</div>






@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnCancel').click(function () {
                window.location.href = '/Print/PrintServiceColor';
                return false;
            });
            $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
            $('#btnSubmit').prop("disabled", true);

            $('#Description').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var description = $('#Description').val().length > 0;


                    if ((description)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}
}



