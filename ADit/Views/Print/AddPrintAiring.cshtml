@model ADit.Interfaces.IPrintTransactionAiringView

@{
    ViewBag.Title = "Add Print Airing";
}


<h2>Add Print Airing</h2>

@using (Html.BeginForm("AddPrintAiring", "Print", FormMethod.Post, new { id = "editForm", enctype = "multipart/form-data", encoding = "multipart/form-data" }))
{
    <h4></h4>
    <hr />
    <p class="text-danger">@Html.ValidationSummary()</p>
    <p class="text-danger"> @Model.ProcessingMessage</p>

    @Html.AntiForgeryToken()

    <input type="hidden" name="TVTransactionId" value="@Model.PrintTransactionId" />
    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>NewsPaper Type:
        </div>
        <div class="data column" style="overflow: hidden;">

            @Html.DropDownList("NewsPaperId", Model.NewspaperList, new { style = "width:204px;height:20px;" })

        </div>
    </div>

    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>Print Service Type:
        </div>
        <div class="data column" style="overflow: hidden;">

            @Html.DropDownList("ServiceTypeCode", Model.ServiceTypeCodeList, new { style = "width:204px;height:20px;" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Newspaper" class="enabledButton" style="width: 125px;" />
        </div>
    </div>
}