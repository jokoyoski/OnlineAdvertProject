@model ADit.Interfaces.IPrintServiceColor
@{
    ViewBag.Title = "Delete Print Service Color";
}

<h2>Delete Print Service Color</h2>





<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()

        </div>
    </div>
    @using (Html.BeginForm("DeletePrintServiceColor", "Print", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="PrintServiceTypeColorId" value="@Model.PrintServiceTypeColorId" />

        <div class="columns" align="center" style="width: 100%; padding-top: 5px;">
            <div class="label center" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>PrintServiceTypeColor:
            </div>
            <div class="data column" style="overflow: hidden;">
                Delete Print Service Color Entry: @Model.PrintServiceTypeColor?
                <input id="PrintServiceTypeColor" name="PrintServiceTypeColor" style="width: 250px;" type="hidden" maxlength="50" value="@Model.PrintServiceTypeColor" />
            </div>
        </div>


        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />

            <a href="/Print/PrintServiceColor" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>

        </div>

    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Material Price');

        $('#btnCancel').click(function () {
            window.location.href = '/Print/PrintServiceColor';
            return false;
        });

    });
</script>
