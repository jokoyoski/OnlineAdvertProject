
@{
    ViewBag.Title = "Delete NewsPaper";
}

<h2>Delete NewsPaper</h2>
@model ADit.Interfaces.IPrintMediaType




<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()

        </div>
    </div>
    @using (Html.BeginForm("DeletePrintMediaTypeId", "Print", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
      
        <input type="hidden" name="PrintMediaTypeId" value="@Model.PrintMediaTypeId" />

        <div class="columns" align="center" style="width: 100%; padding-top: 5px;">
            <div class="label center" style="width: 175px; text-align: right; padding-right: 5px;">
                <span  style="color:red;" class="required">*</span>Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                Delete NewsPaper Entry: @Model.Description?
                <input id="Description" name="Description" style="width: 250px;" type="hidden" maxlength="50" value="@Model.Description" />
            </div>
        </div>


        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <a href="/Print/PrintMediaType" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>

        </div>

    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Material Price');

        $('#btnCancel').click(function () {
            window.location.href = '/Print/PrintMediaType';
            return false;
        });

    });
</script>