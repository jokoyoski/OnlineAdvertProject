@model ADit.Interfaces.IBrandingMaterialView

@{
    ViewBag.Title = "Delete Branding Material";
}

@section PageTitle{
    Delete Branding Material
}


<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteBrandingMaterial", "Branding", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="BrandingMaterialId" value="@Model.BrandingMaterialId"/>


        <div class="text-danger text-center">Are you sure you want to delete the selected Branding Material ?</div>
        <p class="text-center text-bold" style="font-weight: bold">Branding material description</p>
        <p class="text-center text-bold">@Model.Description</p>



        <div class="" align="center">
            <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                 type="submit" value="Cancel" />

        </div>
        @*<div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
               
            </div>
            <div class="column" style="margin-left: 15px;">
                
            </div>

        </div>*@
    }
</div>


<script type="text/javascript">
    $(document).ready(function() {
        $("span.ui-dialog-title").text('Delete Branding Material ');

        $('#btnCancel').click(function() {
            window.location.href = '/Branding/Material';
            return false;
        });

    });
</script>