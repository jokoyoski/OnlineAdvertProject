@model ADit.Interfaces.IBrandingView
@{
    ViewBag.Title = "Buy Branding Advert";
}

<!--<h2>Register</h2>-->
<div>
    <p></p>
</div>
@using (Html.BeginForm("Index", "Branding", FormMethod.Post, new {id = "editForm", enctype = "multipart/form-data", encoding = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row no-gutters">
            <div class="card   col-md-8 m-auto">
                <div class="card-header">
                    <h4>Buy Branding Advert</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger">@Html.ValidationSummary()</p>

                    <div class="form-group" id="Apcondescribe">
                        <label class="control-label required"><span class="text-danger">*</span> Enter your title</label>
                        <div class="">
                            <input id="OrderTitle" name="OrderTitle" required class ="form-control" type="text" maxlength="100" value="@Model.OrderTitle" placeholder="Provide a title or name"/>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-6">
                            <div class="form-group ">
                                <label class="control-label required"><span class="text-danger">*</span> What material do you require?</label>
                                <div class="data" style="overflow: hidden;">
                                    @Html.DropDownList("BrandingMaterialId", Model.MaterialList, new {@class = "form-control", id = "BrandingMaterialId"})
                                </div>
                            </div>

                        </div>

                        <div class="col-6">

                            <div class="form-group ApconAmountOption" id="ApconAmountOption">
                                <label class="control-label">Branding Amount Price:</label>
                                <div class="">
                                    <input type="text" id="brandingMaterialPrice" readonly name="BrandingMaterialAmount" class="form-control" value="@Model.BrandingMaterialAmount.ToString("#")"/>
                                    <input typeof="text" id="BrandingMaterialPriceId" hidden name="BrandingMaterialPriceId" class="form-control" value="0"/>
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="row">

                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label required"><span class="text-danger">*</span> What are your preferred colors?</label>
                                 @Html.DropDownList("ColorId", Model.ColorList, new {@class = "selectpicker", multiple = "multiple", id = "ColorId", size = "5"})
                                 
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label required"><span class="text-danger">*</span> Specify additional color Information</label>
                        <div class="data" style="overflow: hidden;">
                            @Html.TextArea("otherColor", null, new {@class = "form-control"})
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-6">

                            <div class="form-group">
                                <label class="control-label required"><span class="text-danger">*</span> What are your preferred design element?</label>
                                <div class="data" style="overflow: hidden;">
                                    @Html.DropDownList("DesignElementId", Model.DesignElementList, new {@class = "form-control", id = "DesignElmentId"})
                                </div>
                            </div>

                        </div>

                        <div class="col-6">
                            <div class="form-group DesignAmountOption" id="DesignAmountOption">
                                <label class="control-label required"> Design Price:</label>
                                <div class="data" style="overflow: hidden;">
                                    <input type="text" id="designElementPrice" readonly name="DesignElementAmount" class="form-control" value="@Model.DesignElementAmount"/>
                                    <input typeof="text" id="DesignElementPriceId" hidden name="DesignElementPriceId" class="form-control" value="0"/>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group" id="scriptingMaterialSection">
                        <label class="control-label required">Upload your Design Material:</label>
                        <div class="data" style="overflow: hidden;">
                            <input type="file" id="designMaterial" name="designMaterial" style="width: 250px;"
                                   accept=".txt,.doc,.jpg ,.docx" title="Upload your Design Element"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label"> Additional Information field: <span class="text-danger">*</span></label>
                        <div class="data" style="overflow: hidden">
                            <textarea id="AdditionalInformation" name="AdditionalInformation" required class="form-control">@Model.AdditionalInformation</textarea>
                        </div>
                    </div>
                    

                    <input type="hidden" readonly id="finalAmount" name="TotalAmount" value="@Model.TotalAmount.ToString("00,0")" class="form-control"/>

                    <h3 id="TotalAmount" style="font-size: 20px" class="text-right">
                        <strong> Price: 0.0 </strong>
                    </h3>

                    <div class="form-group">
                        <input type="submit" value="Add to Cart" class="enabledButton btn btn-danger pull-right" style="width: 125px;"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.widgets.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>

    <!-- Branding Javascript-->
    <script src="~/Scripts/services/branding.js" type="text/javascript"></script>

    <!--Select Quey-->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>

}


@section JavaScriptsExecution{
    <script>
        $('.selectpicker').selectpicker();
    </script>

}

@section Stylesheets
{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/tablesorter/theme.blue.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/tablesorter/jquery.tablesorter.pager.css" rel="stylesheet" type="text/css"/>

    <!-- CSS Style-->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css">

}