@model ADit.Interfaces.IBrandingMaterialPriceView

@{
    ViewBag.Title = "EditOnlinePlatformPackagePrice";
}


@section PageTitle{
    Update Branding Material Price
}

<div class="jumbotron container">
    <div class="form-group" style="font-size: 12px;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditBrandingMaterialPrice", "Branding", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="DateCreated" name="DateCreated" value="@Model.DateCreated" />
        <input type="hidden" id="BrandingMaterialPriceId" name="BrandingMaterialPriceId" value="@Model.BrandingMaterialPriceId" />

       
        <div class="row">
            <div class="col-md-5">
                <span style="color:red;">*</span>Material Type:
                @Html.DropDownList("BrandingMaterialId", Model.BrandingMaterialType, new { @class="form-control", style = "width:204px;", id = "BrandingMaterialId" })
            </div>



            <div class="col-md-5">
                <span style="color:red;">*</span>Enter the amount:
                <input class="form-control" id="Amount" name="Amount" style="width: 204px;" type="text" maxlength="100" value="@Model.Amount" />
            </div>

        </div>

        <div class="row">
            <div class="col-md-5">
                <span style="color:red;">*</span>Comment :
                <input class="form-control" id="Comment" name="Comment" style="width: 204px;" type="text" maxlength="100" value="@Model.Comment" />
            </div>


            <div class="col-md-5">
                <span style="color:red;">*</span>Date Effective :
                <input class="form-control" id="EffectiveDate" name="EffectiveDate" style="width: 204px;" type="date" maxlength="100" value="@Model.EffectiveDate" />
            </div>
        </div>

     

        <div class="col-12  pt-3">

            <div class="pl-3 row">
                <div class="row">
                    <div>
                        <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width:80px;"  type="submit" value="Submit" />
                    </div>

                    <div class="pl-4">
                        <a href="/Branding/BrandingMaterialPrice" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>
                
                    </div>

                </div>

            </div>

            <div>
                You must enter all information above correctly to enable submission.
            </div>
         
        </div>

    }
 </div>



        @section JavaScriptsExecution
{
            <script type="text/javascript">

                $(document).ready(function () {

                    $('#btnCancel').click(function () {
                        alert("Precious");

                        window.location.href = '/Branding/BrandingMaterialPrice';
                        return false;

                    });

                    $("#BrandingMaterialId").change(function () {
                        $("#Amount").trigger('propertychange');

                    });



                    $("#Comment").change(function () {

                        $("#Amount").trigger('propertychange');
                    });


                    $("#EffectiveDate").change(function () {

                        $("#Amount").trigger('propertychange');
                    });


                    $('#Amount').bind('input propertychange',
                        function () {

                            $('#btnSubmit').prop("class", "grayButton");
                         //   $('#btnSubmit').prop("disabled", true);


                            var effectiveDate = $("#EffectiveDate").val().length > 0;
                            var dateInActive = $("#DateInactive").val().length > 0;
                            var comment = $("#Comment").val().length > 0;
                            var amount = $("#Amount").val().length > 0 && $("#Amount").val() > 0;
                            var branding = ($("#BrandingMaterialId").val() != -1);

                            if ((comment && amount && branding && effectiveDate
                            ) /*&& (comment )&& (amount)*/ /*&&(comment) && (amount)*/
                            ) {
                                $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                                $('#btnSubmit').prop("disabled", false);
                            }
                        });

                });
            </script>

        }


        @section Stylesheets{
            <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
        }




