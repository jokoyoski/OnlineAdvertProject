@section JavaScriptsExecution
{

    <script type="text/javascript">

        $(document).ready(function () {

            $('#btnCancel').click(function() {
                $("span.ui-dialog-title").text('Edit Material Type');
                window.location.href = '/Branding/BrandingMaterialPrice';
                return false;
            });


            //Validation
            $("#BrandingMaterialId").change(function() {
                $("#Amount").trigger('propertychange');


            });


            //$("#DateInactive").change(function() {

            //    $("#Amount").trigger('propertychange');
            //});

            $("#Comment").change(function() {

                $("#Amount").trigger('propertychange');
            });


            $("#EffectiveDate").change(function() {

                $("#Amount").trigger('propertychange');
            });


           


            $('#Amount').bind('input propertychange',
                function() {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);


                    var effectiveDate = $("#EffectiveDate").val().length > 0;
                   // var dateInActive = $("#DateInactive").val().length > 0;
                    var comment = $("#Comment").val().length > 0;
                    var amount = $("#Amount").val().length > 0;
                    var branding = ($("#BrandingMaterialId").val() !== -1);


                    if (( comment && amount && branding && effectiveDate)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
