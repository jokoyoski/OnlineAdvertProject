@model ADit.Interfaces.IBrandingMaterialPriceView




@section PageTitle{
    Delete BrandingMaterialPrice
}


<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteBrandingMaterialPrice", "Branding", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="BrandingMaterialPriceId" name="BrandingMaterialPriceId" value="@Model.BrandingMaterialPriceId" />

        <div class="text-danger text-center">Are you sure you want to delete the selected Branding Price ?</div>
        <p class="text-center text-bold" style="font-weight: bold">Branding Material Price</p>
        <p class="text-center text-bold">@Model.Amount.ToString("#,##0")</p>


        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <a href="/Branding/Material" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>

        </div>
          

        @*<div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">

            </div>
            <div class="column" style="margin-left: 15px;">

            </div>*@


    }
</div>


<script type="text/javascript">
    $(document).ready(function() {
        $("span.ui-dialog-title").text('Delete Branding Material Price');

        $('#btnCancel').click(function() {
            window.location.href = '/Branding/BrandingMaterialPrice';
            return false;
        });

    });
</script>