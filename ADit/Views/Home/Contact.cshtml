@model ADit.Interfaces.IContactView
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new {id = "editForm", enctype = "multipart/form-data", encoding = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <section class="contact-wthree py-sm-5 py-4" id="contact">
        <div class="container pt-lg-3">
            <div class="title-desc text-center pb-sm-3">
                <h3 class="main-title-w3pvt">contact us</h3>
                <p>Inspired By Passion. Driven By Results.</p>
            </div>
            <div class="row mt-4">
                <div class="col-lg-5 text-center">
                    <h5 class="cont-form">get in touch</h5>
                    <div class="row flex-column">
                        <div class="contact-w3">
                            <span class="fa fa-envelope-open  mb-3" style="color: #ff6600;"></span>
                            <div class="d-flex flex-column">
                                <a href="mailto:sales@aditng.com" class="d-block">sales@aditng.com</a>
                                <a href="mailto:support@aditng.com" class="my-2 d-block">support@aditng.com</a>
                                <a href="mailto:customers@aditng.com">customers@aditng.com</a>
                            </div>
                        </div>
                        <div class="contact-w3 my-4">
                            <span class="fa fa-phone mb-3" style="color: #ff6600;"></span>
                            <div class="d-flex flex-column">
                                <p>+234 801 123 7890</p>
                                <p class="my-1">+1 123 7890</p>
                                <p>+234 909 123 7890</p>
                            </div>
                        </div>
                        <div class="contact-w3">
                            <span class="fa fa-home mb-3" style="color: #ff6600;"></span>
                            <address>Plot P180 <br>Moonwort Avenue.<br> Cooperative Villas, Badore, Lagos.</address>
                        </div>
                    </div>

                </div>
                <div class="col-lg-7">
                    <h5 class="cont-form">contact form</h5>
                    <div class="contact-form-wthreelayouts">
                        <form action="#" method="post" id="meman" class="register-wthree">
                            <div class="form-group">
                                <label>
                                    Who do you want to reach?
                                </label>

                                @Html.DropDownList("ContactId", Model.contactList, new {@class = "form-control", id = ""})


                            </div>
                            <div class="form-group">
                                <label>
                                    Your Name
                                </label>
                                <input class="form-control" type="text" placeholder="Your name here" name="Name" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <label>
                                    Mobile
                                </label>
                                <input class="form-control" type="text" placeholder="Your telephone number" name="PhoneNumber" value="@Model.PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label>
                                    Email
                                </label>
                                <input class="form-control" type="email" placeholder="Type your email " name="customerEmail"
                                       value="@Model.customerEmail">
                            </div>
                            <div class="form-group">
                                <label>
                                    Your message
                                </label>
                                <textarea value="@Model.Message" name="Message" placeholder="Type your message " class="form-control"></textarea>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-w3layouts btn-block  bg-theme1 color-white w-100 font-weight-bold text-uppercase">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}