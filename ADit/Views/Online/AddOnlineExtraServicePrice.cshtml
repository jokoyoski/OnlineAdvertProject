@model ADit.Interfaces.IOnlineExtraServicePriceView
@{
    ViewBag.Title = "Adit - Add Online Extra Service Price";
}

@section PageTitle{
    Add Extra Service Price
}
<div class="jumbotron">

    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
           
            @Model.ProcessingMessage
        </div>
    </div>

    @using (Html.BeginForm("AddOnlineExtraServicePrice", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" name="Description" style="width: 250px;" type="text" maxlength="50" value="@Model.Comment" />
            </div>
  
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">

            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Amount:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Description" name="Description" style="width: 250px;" type="text" maxlength="50" value="@Model.Amount" />
            </div>
            
            </div>

            <div class="columns" style="width: 100%; padding-top: 5px;">

                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span class="required">*</span>Effective Date:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="Description" name="Description" style="width: 250px;" type="date" maxlength="50" value="@Model.EffectiveDate" />
                </div>

            </div>





            <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
                <div class="column" style="margin-left: 195px;">
                    <input class="grayButton" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit" />
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
                @Html.ValidationSummary()
            </div>

        
    }



@section JavaScriptsIncludes
 {
<script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
<script type="text/javascript">
    $(document).ready(function () {


        $("#DateInactive").change(function () {

            $("#Amount").trigger('propertychange');
        })

        $("#Comment").change(function () {

            $("#Amount").trigger('propertychange');
        })



        $('#Amount').bind('input propertychange',
            function () {

                $('#btnSubmit').prop("class", "grayButton");
                $('#btnSubmit').prop("disabled", true);




                var dateInActive = $("#DateInactive").val().length > 0;
                var comment = $("#Comment").val().length > 0;
                var amount = $("#Amount").val().length > 0;


                if ((dateInActive && comment && amount)/*&& (comment )&& (amount)*//*&&(comment) && (amount)*/
                ) {
                    $('#btnSubmit').prop("class", "blueButton");
                    $('#btnSubmit').prop("disabled", false);
                }
            });

    });
</script>
}

@section Stylesheets{
<link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}