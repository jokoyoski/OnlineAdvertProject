@model ADit.Interfaces.IOnlinePurposeView

@{
    ViewBag.Title = "Delete Online Purpose ";
}

@section PageTitle{
    Delete Online Extra Service
}


<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteOnlinePurpose", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="OnlinePurposeId" value="@Model.OnlinePurposeId" />



        <div class="text-danger text-center">Are you sure you want to delete the Online Purpose?</div>
        <p class="text-center text-bold" style="font-weight: bold">Online Purpose</p>
        <p class="text-center text-bold">@Model.Description</p>



        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <a href="/Online/OnlinePurposeList" class="btn btn-danger" id="btnCancel" name="submitButton" style="width: 80px;color:white">Cancel</a>

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Online Purpose ' + $('#Description').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Online/OnlinePurposeList';
            return false;
        });

    });
</script>