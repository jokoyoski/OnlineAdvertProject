@model ADit.Interfaces.IOnlineExtraServicePriceView

@{
    ViewBag.Title = "EditOnlineExtraServicePrice";
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditOnlineExtraServicePrice", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" id="DateCreated" name="DateCreated" value="@Model.DateCreated" />

        <input type="hidden" id="OnlineExtraServicePriceId" name="OnlineExtraServicePriceId" value="@Model.OnlineExtraServicePriceId" />


        <div class="form-group" style="width: 100%; padding-top: 5px;">
            <div class="label column">
                <span class="required">*</span>Online Platform:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("OnlineExtraServicePriceId", Model.OnlineExtraService, new { @class="form-control", style = "width:204px;", id = "OnlineExtraServiceId" })
            </div>
        </div>

        <div class="form-group" style="width: 100%; padding-top: 5px;">
            <div class="label column">
                <span  style="color:red;" class="required">*</span>Amount:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input class="form-control" id="Amount" name="Amount" style="width: 250px;" type="text" maxlength="50" value="@Model.Amount.ToString("#")" />
            </div>
        </div>


        <div class="form-group" style="width: 100%; padding-top: 5px;">
            <div class="label column">
                <span  style="color:red;" class="required">*</span>Comment:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input class="form-control" id="Comment" name="Comment" style="width: 250px;" type="text" maxlength="50" value="@Model.Comment" />
            </div>
        </div>


        @*<div class="form-group" style="width: 100%; padding-top: 5px;">
            <div class="label column">
                <span class="required">*</span>Date Inactive:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input class="form-control" id="DateInactive" name="DateInactive" style="width: 250px;" type="text" maxlength="50" value="@Model.DateInactive"/>
            </div>
        </div>*@
        <div class="form-group" style="width: 100%; padding-top: 5px;">
            <div class="label column">
                <span  style="color:red;" class="required">*</span>Effective Date:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input class="form-control" id="EffectiveDate" name="EffectiveDate" style="width: 250px;" type="text" maxlength="50" value="@Model.EffectiveDate.ToString("d")" />
            </div>
        </div>



        <div class="form-inline" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column">
                <input class="btn grayButton btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Submit" />
            </div>
            <div class="column pl-3">
                <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>&nbsp; &nbsp;
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>



