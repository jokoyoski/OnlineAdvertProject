@model ADit.Interfaces.IOnlinePlatformPackagePriceView

@{
    ViewBag.Title = "EditOnlinePlatformPackagePrice";
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("EditOnlinePlatformPackagePrice", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="DateCreated" name="DateCreated" value="@Model.DateCreated" />
        <input type="hidden"    id="onlinePlatformPriceId" name="OnlinePlatformPriceId" value="@Model.OnlinePlatformPriceId" />


        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red">*</span>Duration Type:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("OnlineDurationId", Model.OnlineDurationsList, new { style = "width:204px;height:20px;", id = "DurationTypeCode" })
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red">*</span>Online Platform:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("OnlinePlatformId", Model.OnlinePlatform, new { style = "width:204px;height:20px;", id = "OnlinePlatformId" })
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red">*</span>Amount:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Amount" name="Amount" style="width: 250px;" type="text" maxlength="50" value="@Model.Amount.ToString("#")" />
            </div>
        </div>


        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red">*</span>Comment:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="Comment" name="Comment" style="width: 250px;" type="text" maxlength="50" value="@Model.Comment" />
            </div>
        </div>
    

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span style="color:red" >*</span>Date Effective:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="EffectiveDate" name="EffectiveDate" style="width: 250px;" type="text" maxlength="50" value="@Model.EffectiveDate.ToString("d")" />
            </div>
        </div>


        @*<div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Date Inactive:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="DateInactive" name="DateInactive" style="width: 250px;" type="text" maxlength="50" value="@DisplayHelper.DisplayDate(Model.DateInactive)" />
            </div>
        </div>*@

        <div class="columns form-inline" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column pl-3">
                <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Submit" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>


<script type="text/javascript">
      $(document).ready(function () {

          $("#DurationTypeCode").change(function () {
              $("#Amount").trigger('propertychange');

          })

          $("#OnlinePlatformId").change(function () {
              $("#Amount").trigger('propertychange');

          })


          $("#EffectiveDate").change(function () {

              $("#Amount").trigger('propertychange');
          });



          //$("#DateInactive").change(function () {

          //    $("#Amount").trigger('propertychange');
          //})

          $("#Comment").change(function () {

              $("#Amount").trigger('propertychange');
          })
})


          $('#Amount').bind('input propertychange',
              function () {

                  $('#btnSubmit').prop("class", "grayButton");
                  $('#btnSubmit').prop("disabled", true);




                 var dateEffective = $("#DateInactive").val().length > 0;
                  var comment = $("#Comment").val().length > 0;
                  var amount = $("#Amount").val().length > 0;
          ;
                  var onlineplatform = ($("#OnlinePlatformId").val() != -1);
                  var durationtype = ($("#DurationTypeCode").val() != -1);

                  if ((comment && amount && onlineplatform && durationtype && dateEffective)/*&& (comment )&& (amount)*//*&&(comment) && (amount)*/
                  ) {
                      $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                      $('#btnSubmit').prop("disabled", false);
                  }
              });

      });
</script>


@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}
