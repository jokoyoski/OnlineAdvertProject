@model ADit.Interfaces.IOnlinePlatformView
@{
    ViewBag.Title = "Adit - Edit Online Platform View";
}

@section PageTitle{
    Add Online Platform
}
<div class="jumbotron">

    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>

    @using (Html.BeginForm("EditOnlinePlatform", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" id="OnlinePlatform" name="OnlinePlatformId" value="@Model.OnlinePlatformId" />

        <div class="form-group">
            <div class="label column">
                <span  style="color:red;" class="required">*</span>Online Platform Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input class="form-control" id="Description" name="Description" type="text" maxlength="50" value="@Model.Description" />
            </div>
        </div>


        <div class="form-inline">
            <div class="form-group" style="margin-left: 195px;">
                <input class="btn enabledButton btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;"  type="submit" value="Submit" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>



@section JavaScriptsIncludes
    {
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


<script type="text/javascript">
     $(document).ready(function () {


         $('#btnCancel').click(function () {
             window.location.href = '/Online/OnlinePlatformList';
             return false;
         });
         $('#Description').bind('input propertychange',
             function () {

                 $('#btnSubmit').prop("class", "grayButton");
                 $('#btnSubmit').prop("disabled", true);

                 var description = $('#Description').val().length > 0;


                 if ((description)
                 ) {
                     $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                     $('#btnSubmit').prop("disabled", false);
                 }
             });








     });
</script>




@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}



