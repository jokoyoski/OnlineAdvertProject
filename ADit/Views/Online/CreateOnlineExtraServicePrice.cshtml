@model ADit.Interfaces.IOnlineExtraServicePriceView
@{
    ViewBag.Title = "Save Online Extra Service Price";
}



@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class=""> Create Extra Service Price</h4><br>
<div class="jumbotron container">
    <div class="validation-summary-errors">
        @Html.ValidationSummary()
        @Model.ProcessingMessage
    </div>
    @using (Html.BeginForm("CreateOnlineExtraServicePrice", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4></h4>
            <hr/>


            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span style="color:red;">*</span>Material Type:
                 
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("OnlineExtraServiceId", Model.OnlineExtraService, new {style = "width:204px;", @class = "form-control", id = "OnlineExtraServiceId"})
                </div>
            </div>

            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span style="color:red;">*</span>Amount:
                    
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="Amount" name="Amount" class="form-control" style="width: 204px;" type="text" maxlength="100" value="@Model.Amount"/>
                </div>
            </div>


            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span style="color:red;">*</span>Comment:
                
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="Comment" name="Comment" class="form-control" style="width: 204px;" type="text" maxlength="100" value="@Model.Comment"/>
                </div>
            </div>

            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span style="color:red;">*</span>Date Effective:
                 
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="EffectiveDate" class="form-control" name="EffectiveDate" style="width: 204px;" type="date" maxlength="100" value="@Model.EffectiveDate"/>
                </div>
            </div>
            @*<div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span class="required">*</span>Date Inactive :
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="DateInactive" name="DateInactive" style="width: 204px;" type="date" maxlength="100" value="@Model.DateInactive"/>
                </div>
            </div>*@

            <div class="columns form-inline" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
                <div class="column">
                    <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit"/>
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel"/>
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>
        </div>
    }
</div>



@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnCancel').click(function () {
                
                window.location.href = '/Online/ExtraServicePrice/';
                return false;
            });



            $("#OnlineExtraServiceId").change(function() {

                $("#Amount").trigger('propertychange');
            })

            //$("#DateInactive").change(function() {

            //    $("#Amount").trigger('propertychange');
            //})

            $("#Comment").change(function() {

                $("#Amount").trigger('propertychange');
            })

            $("#EffectiveDate").change(function() {

                $("#Amount").trigger('propertychange');
            })

            $('#Amount').bind('input propertychange',
                function() {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);


                    //var dateInActive = $("#DateInactive").val().length > 0;
                    var comment = $("#Comment").val().length > 0;
                    var amount = $("#Amount").val().length > 0 && $("#Amount").val() > 0;
                    var efDate = $("#EffectiveDate").val().length > 0;
                    var onlineextraservice = ($("#OnlineExtraServiceId").val() != -1);


                    if ((comment && amount && onlineextraservice && efDate
                        ) /*&& (comment )&& (amount)*/ /*&&(comment) && (amount)*/
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css"/>
}