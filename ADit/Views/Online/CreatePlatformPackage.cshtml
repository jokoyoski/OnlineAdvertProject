@model ADit.Interfaces.IOnlinePlatformPackagePriceView

@{
    ViewBag.Title = "Save Online Platform Package Price";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h4 class="">Create   Platform Package Price</h4><br>
<div class="jumbotron container">
    @if (!string.IsNullOrEmpty(Model.ProcessingMessage))
    {
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>

    </div>
    }
    @using (Html.BeginForm("CreatePlatformPackage", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4></h4>

            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column">
                    <span style="color:red;">*</span> Online Platform:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("OnlinePlatformId", Model.OnlinePlatform, new { style = "width:204px;", @class = "form-control", id = "OnlinePlatformId" })
                </div>
            </div>



            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column">
                    <span style="color:red;">*</span> Duration:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("OnlineDurationId", Model.OnlineDurationsList, new { style = "width:204px;", @class = "form-control", id = "OnlineDurationId" })
                </div>
            </div>


            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column">
                    <span style="color:red;">*</span> DurationType:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("DurationsTypeCode", Model.DurationsType, new { style = "width:204px;", @class = "form-control", id = "DurationsTypeCode" })
                </div>
            </div>


            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column">
                    <span style="color:red;">*</span> Amount:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="Amount" class="form-control" name="Amount" style="width: 204px;" type="text" maxlength="100" value="@Model.Amount" />
                </div>
            </div>


          



            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column">
                    <span style="color:red;">*</span> Comment:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="Comment" class="form-control" name="Comment" style="width: 204px;" type="text" maxlength="100" value="@Model.Comment" />
                </div>
            </div>


          
            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column">
                    <span style="color:red;">*</span> Date Effective:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="EffectiveDate" class="form-control" name="EffectiveDate" style="width: 204px;" type="date" maxlength="100" value="@Model.EffectiveDate" />
                </div>
            </div>


           
            <div class="columns form-inline" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
                <div class="column">
                    <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit" />
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                           type="button" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>
            @Html.ValidationSummary()
        </div>

    }

</div>


@section JavaScriptsIncludes
 {
        <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    }

    
    @section JavaScriptsExecution
{
        <script type="text/javascript">

            $('#btnCancel').click(function () {
                window.location.href = '/Online/PlatformPackage';
                return false;
            });
            $(document).ready(function () {

                $("#OnlineDurationId").change(function () {
                    $("#Amount").trigger('propertychange');

                })

                $("#OnlinePlatformId").change(function () {
                    $("#Amount").trigger('propertychange');

                })


            

                $("#Comment").change(function () {

                    $("#Amount").trigger('propertychange');
                })

               

                $("#EffectiveDate").change(function () {

                    $("#Amount").trigger('propertychange');
                })



                $('#Amount').bind('input propertychange',
                    function () {

                        $('#btnSubmit').prop("class", "grayButton");
                        $('#btnSubmit').prop("disabled", true);




                      //  var dateInActive = $("#DateInactive").val().length > 0;
                        var dateeffective = $("#EffectiveDate").val().length > 0;
                        var comment = $("#Comment").val().length > 0;
                        var amount = $("#Amount").val().length > 0 && $("#Amount").val() > 0;
                        var onlineplatform = ($("#OnlinePlatformId").val() !== -1);
                        var durationtype = ($("#OnlineDurationId").val() !== -1);

                        if (( dateeffective && comment && amount  && onlineplatform && durationtype)
                        ) {
                            $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                            $('#btnSubmit').prop("disabled", false);
                        }
                    });

            });
        </script>
    }

    @section Stylesheets{
        <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
    }
