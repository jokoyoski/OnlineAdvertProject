
@model ADit.Interfaces.IOnlinePlatformPackagePriceView




@section PageTitle{
    Delete Online Platform Package Price
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteOnlinePlatformPackagePrice", "Online", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="OnlinePlatformPriceId" name="OnlinePlatformPriceId" value="@Model.OnlinePlatformPriceId" />


        

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
               Amount:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="Amount" name="Amount" style="width: 250px;" type="text" maxlength="50">@Model.Amount</label>
            </div>
        </div>


        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="enabledButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="enabledButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete MaterialType' + $('#Description').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Online/PlatformPackage';
            return false;
        });

    });
</script>