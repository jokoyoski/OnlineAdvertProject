@{
    ViewBag.Title = "Encrypt Plain Text";
}

@using (Html.BeginForm("Encrypt", "Config", FormMethod.Post, new { id = "encryptForm" }))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="row form-group" style="width:100%;">
                <div class="label column">
                    <span style="color:red;">*</span>Plain Text:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="plainText" name="plainText" class="form-control" style="width:280px;" type="text" maxlength="100" value="@ViewBag.PlainText" />
                </div>
            </div>
            <div class="row form-group" style="width:100%;">
                <div class="label column">
                    <span style="color:red;">*</span>Encrypted Value:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="encryptedValue" name="encryptedValue" class="form-control" style="width:600px;" type="text" value="@ViewBag.EncryptedValue" />
                </div>
            </div>
            <div class="row" style="width:100%;">
                <div class="form-group" style="margin-left: 15px;">
                    <input class="grayButton btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Encrypt" />
                </div>
                <div class="form-group" style="margin-left: 15px;">
                    <input id="btnCancel" class="enabledButton btn btn-danger" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter plaintext to enable submission.
                </div>
            </div>
        </div>
    </div>
    <br />
}

@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnCancel').click(function () {
                window.location.href = '/Config/';
                return false;
            });


            $('#plainText').bind('input propertychange',
                function () {

                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var plainTextVal = $('#plainText').val().length > 0;
                    
                    if ((plainTextVal)
                    ) {
                        $('#btnSubmit').prop("class", "enabledButton btn btn-primary");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });
        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}
