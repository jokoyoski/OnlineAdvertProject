@model ADit.Interfaces.ITVServicePricesListView

@{
    ViewBag.Title = "Delete Tv Service Price View  ";
}

@section PageTitle{
   Delete tVService Type Price
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()

        </div>
    </div>
    @using (Html.BeginForm("DeleteTvServicePrice", "Tv", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="TvServicesPriceListId" name="TvServicesPriceListId" value="@Model.TvServicesPriceListId" />

        <div class="text-danger text-center">Are you sure you want to delete the selected Amount ?</div>
        <p class="text-center text-bold" style="font-weight: bold"></p>
        <p class="text-center text-bold">@Model.Amount</p>




        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('DeleteServivePrice ' + $('#Description').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/Apcon';
            return false;
        });

    });
</script>