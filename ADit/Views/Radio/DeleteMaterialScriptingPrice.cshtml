@model ADit.Interfaces.IMaterialScriptingPriceView




@section PageTitle{
    Delete Material Scripting Price
}


<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteMaterialScriptingPrice", "Radio", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="materialScriptingPriceId" name="materialScriptingPriceId" value="@Model.MaterialScriptingPriceId" />



        <div class="text-danger text-center">Are you sure you want to delete the selected Material scripting price?</div>
        <p class="text-center text-bold" style="font-weight: bold">Material scripting price Comment  :: </p>
        <p class="text-center text">@Model.Comment</p>



        <div align="center">

            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            <input id="btnCancel" class="btn btn-danger enabledButton" name="submitButton" style="width: 80px;"
                   type="submit" value="Cancel" />

        </div>
    }
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete ScriptingPrice');

        $('#btnCancel').click(function () {
            window.location.href = '/Radio/ScriptingPrice';
            return false;
        });

    });
</script>