@model ADit.Interfaces.ITimingView
@{
    ViewBag.Title = "ADit- Add Material Timing List";
}
=
@section PageTitle{
    Add Timing
}
<div class="jumbotron">

    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>

    @using (Html.BeginForm("AddMaterialTiming", "Radio", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Parent Company:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("departmentId", Model.ParentTimingDropDown, new { style = "width:204px;height:20px;", id = "departmentId" })
            </div>
        </div>





            <input type="hidden" name="companyId" value="@Model.TimingId" />

            

            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span class="required">*</span>Description:
                </div>
                <div class="data column" style="overflow: hidden;">
                    <input id="description" name="description" style="width: 250px;" type="text" maxlength="50" value="@Model.Description" />
                </div>
            </div>




            <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
                <div class="column" style="margin-left: 195px;">
                    <input class="grayButton" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit" />
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="enabledButton" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>
    }
</div>



@section JavaScriptsIncludes
    {
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
    {
    <script type="text/javascript">
            $(document).ready(function() {


                $('#btnCancel').click(function () {
                    window.location.href = '/Administration/DepartmentList?companyId=' + @Model.TimingId;
                    return false;
                });




                $('#description').change(function() {
                    $('#departmentName').trigger("propertychange");
                });


                $('#departmentName').bind('input propertychange',
                    function() {
                        $('#btnSubmit').prop("class", "grayButton");
                        $('#btnSubmit').prop("disabled", true);

                        var description = $('#description').val().length > 0;

                        if ((description)
                        ) {
                            $('#btnSubmit').prop("class", "enabledButton");
                            $('#btnSubmit').prop("disabled", false);
                        }
                    });

            });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}
