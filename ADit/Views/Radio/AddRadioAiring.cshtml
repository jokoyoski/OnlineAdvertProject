@model ADit.Interfaces.IRadioTransactionAiringView


@{
    ViewBag.Title = "AddRadioAiring";
}


<h2>AddRadioAiring</h2>
@using (Html.BeginForm("AddRadioAiring", "Radio", FormMethod.Post, new {id = "editForm", enctype = "multipart/form-data", encoding = "multipart/form-data"}))
{
    <h4></h4>
    <hr/>
    <p class="text-danger">@Html.ValidationSummary()</p>
    <p class="text-danger"> @Model.ProcessingMessage</p>

    @Html.AntiForgeryToken()

    <input type="hidden" name="RadioTransactionId" value="@Model.RadioTransactionId"/>
    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>Radio Statio:
        </div>
        <div class="data column" style="overflow: hidden;">

            @Html.DropDownList("RadioStationId", Model.RadioStationsList, new {style = "width:204px;height:20px;"})

        </div>
    </div>

    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>Timing:
        </div>
        <div class="data column" style="overflow: hidden;">

            @Html.DropDownList("TimingId", Model.Timing, new {style = "width:204px;height:20px;"})

        </div>
    </div>

    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>Duration :
        </div>
        <div class="data column" style="overflow: hidden;">

            @Html.DropDownList("DurationTypeCode", Model.DurationTypeCodeList, new {style = "width:204px;height:20px;"})

        </div>
    </div>

    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>Duration Quantity:
        </div>
        <div class="data column" style="overflow: hidden;">
            <input type="text" style="width: 204px; height: 20px;" name="durationQuantity" value="@Model.DurationQuantity"/>


        </div>
    </div>


    <div class="columns" style="width: 100%; padding-top: 5px;">
        <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
            <span class="required">*</span>Airing Number per Day:
        </div>
        <div class="data column" style="overflow: hidden;">
            <input type="text" style="width: 204px; height: 20px;" name="airingNumberPerDay" value="@Model.AiringNumberPerDay"/>


        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add radio Station" class="enabledButton" style="width: 125px;"/>
        </div>
    </div>
}