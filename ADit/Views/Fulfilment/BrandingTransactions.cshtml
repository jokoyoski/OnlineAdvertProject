@model ADit.Interfaces.IBrandingView

@{
    var hasDigitalFile = Model.BrandingFileId > 0;



}

<div class="container">
    <div class="row">

        <div class="receipt-main col-xs-10 col-sm-10 col-md-12 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="receipt-header">
                    <div class="col-xs-6 col-sm-6 col-md-6">

                    </div>

                </div>
            </div>

            <div class="row">
                <div class="receipt-header receipt-header-mid col-12">
                    <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                        <div class="receipt-right">

                            <h5> <b>Name :</b>@Model.Name</h5>

                            <h5><b>Mobile :</b> @Model.PhoneNumber</h5>

                            <h5> <b>Email :</b> @Model.Email</h5>


                            <h5><b>Date :</b> @Model.DateCreated</h5>

                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-12 ">
                        <div class=" row ml-0 mt-2">
                            <h6 class=""><b>Order Title :</b></h6>
                            <h6> @Model.OrderTitle</h6>
                        </div>

                    </div>
                </div>
            </div>
            <div>
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>Options</th>
                            <th>Selections</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-md-9">Do you Have Material </td>

                            <td class="col-md-7 btn-btn-success">@Model.BrandingMaterial</td>






                        </tr>
                        <tr>
                            <td class="col-md-9">Material Price</td>

                            <td class="col-md-7 btn btn-success">@Model.BrandingMaterialAmount</td>


                        </tr>
                        <tr>
                            <td class="col-md-9">Additional Color</td>

                            <td class="btn-btn-success col-md-3"> @Model.AdditionalColorInfo</td>


                        </tr>



                        <tr>
                            <td class="col-md-9">Design Element</td>

                            <td class="bg-success col-md-3"> @Model.DesignElement</td>



                        </tr>



                        <tr>
                            <td class="col-md-9">Design Element Price</td>

                            <td class="bg-success col-md-3"> @Model.DesignElementAmount</td>



                        </tr>
                        <tr>
                            <td class="col-md-9">Digital file</td>

                            @{

                                if (Model.DesignDigitalFileId > 0)
                                {
                                    <td class="bg-success col-md-3"> Digital file Uploaded</td>
                                }
                                else
                                {
                                    <td class="bg-danger col-md-3"> No digital File Uploaded</td>
                                }

                            }




                        </tr>



                        <tr>


                            <td class="col-md-9">Additional Info</td>
                            <td class="bg-success col-md-3"> @Model.AdditionalInformation</td>


                        </tr>






                    </tbody>
                </table>
            </div>

            <table class="col-md-12">
                <thead>
                    <tr>

                        <th class="">Colors</th>


                    </tr>
                </thead>

                <tbody>


                    @{

                        foreach (var j in Model.Colors)
                        {



                            <tr>

                                <td class="" style="width:100px;">@j</td>





                            </tr>

                        }



                    }

                </tbody>

            </table>
         


            <div class="form-inline form-group ">
                @if (hasDigitalFile == true)
                {
                    <div class="">
                        <a href="/Fulfilment/fileResult?FileId=@Model.BrandingFileId" class="btn btn-dark btn-sm"><i class="fa fa-download"></i>Download your Material</a>
                    </div>

                }
                else
                {

                }



                <div class="container-fluid">


                    <div class="form-check-inline">
                        <label> Send Message</label>
                        <input type="checkbox" id="checkBoxId" name="selectedRadioStationIds" class="form-control" />
                    </div>



                    <div>
                        @using (Html.BeginForm("OrderFulfilment", "Fulfilment", FormMethod.Post, new { id = "editForm", enctype = "multipart/form-data", encoding = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <input type="text" hidden name="URL" value="BrandingTransactions"/>
                            <input type="text" hidden  value="@Model.CurrentOrderStatus" name="currentStatusCode"/>
                            <input type="text" hidden value="@Model.OrderFulfilmentId" name="OrderFulfilmentId" />
                            <input type="text" hidden value="@Model.UserId" name="CreatedByUserId" />
                            <input type="text" hidden value="@Model.BrandingTransactionId" name="transactionId" />
                            <input type="text" hidden value="@Model.OrderId" name="OrderId" />

                            <div class="container mt-3">
                                <div class="row no-gutters">
                                    <div class="col-md-6 m-auto card">
                                        <div class="card-header">
                                            <h4>Upload Branding Attachment</h4>
                                        </div>
                                        <div class="card-body">
                                            @Html.ValidationSummary()
                                            <div class="form-group">
                                                <label for="scriptMaterial">
                                                    Upload :
                                                </label>
                                                <div>
                                                    <input type="file" id="Material" name="fileBase" class="btn btn-outline-dark"
                                                           accept=".txt,.doc,.jpg ,.docx,.pdf" title="Upload your Material" />
                                                </div>
                                            </div>



                                            <div class="form-check-inline">
                                                <label> Do you require a Response?</label>
                                                <input type="checkbox" id="responseCheckBoxId" name="IsResponseRequired" class="form-control" />
                                            </div>

                                            <div class="form-group">
                                                <label for="MaterialDetails">
                                                    Script Notes
                                                </label>
                                                <textarea class="form-control" id="mailMessage" name="MailMessage" rows="4" cols="50"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label required"><span class="text-danger">*</span> Update Status</label>
                                                <div class="data" style="overflow: hidden;">
                                                    @Html.DropDownList("FulfilmentStatusCode", Model.StatusCodeList, new { @class = "form-control", id = "fulfilmentStatusCode" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <input id="fufilmentStatus" class="btn btn-outline-dark" name="submitButton" style="width: 80px;"
                                                       type="submit" value="Submit" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
                <div>

                    <span class="alert alert-success">@Model.CurrentStatusDescription</span>
                </div>
              





            </div>

        </div>


    </div>

</div>


    @section JavaScriptsIncludes
{
   
<script src="~/Scripts/services/branding.js" type="text/javascript"></script>



}

