@model ADit.Interfaces.IOrderFulfilment
@{
    var title = "Pick Order " + Model.OrderNumber;
}
<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
        </div>
    </div>
    @using (Html.BeginForm("PickPopup", "Fulfilment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="orderFulfilmentId" name="orderFulfilmentId" value="@Model.OrderFulfilmentId" />
        <input type="hidden" id="orderCode" name="orderCode" value="@Model.OrderId" />
        <input type="hidden" id="createdByUserId" name="createdByUserId" value="@Model.CreatedByUserId" />

        <p class="text-center text-bold" style="font-weight: bold">Apcon Approval Type description</p>
        <p class="text-center text-bold">@Model.ServiceTypeDescription</p>

        <div class="form-group">
            <div class="label column">
                Send email to customer:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="isSendMail" class="form-control" name="isSendMail" style="width: 250px;" type="checkbox" value="true" />
            </div>
        </div>
        <div class="form-group" >
            <input class="btn btn-primary" id="btnSubmit" name="submitButton" style="width: 150px;" type="submit" value="Pick Order" />
            <input class="btn btn-danger enabledButton" id="btnCancel" name="submitButton" style="width: 80px;" type="submit" value="Cancel" />
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {

        var title = "Pick  - Order " + $('#orderCode').val() + " Transaction id - " + $('#orderFulfilmentId').val();
        $("span.ui-dialog-title").text(title);

        $('#btnCancel').click(function() {
            window.location.href = '/Fulfilment/Pick';
            return false;
        });

    });
</script>




