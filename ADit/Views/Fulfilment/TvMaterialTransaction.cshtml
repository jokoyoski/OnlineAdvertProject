@using (Html.BeginForm("OnlinePlatformList", "Online", FormMethod.Post, new
    {
        id = "filterForm"
    }))
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid">
            <div class="row no-gutters">
                <div class="col-md-6 m-auto card">
                    <div class="card-header ">
                        <h4>Tv Material Transaction</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="control-label">
                                <span style="color:red;">*</span>Order Title:
                            </label>
                            <div class="data">
                                <input id="OrderTitle" name="orderTitle" class="form-control" type="text" maxlength="100" value="@Model.OrderTitle" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">
                                <span style="color:red;">*</span>Name:
                            </label>
                            <div class="data">
                                <input id="Name" name="orderTitle" class="form-control" type="text" maxlength="100" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">
                                <span style="color:red;">*</span>AdditionalInfo:
                            </label>
                            <div class="data">
                                <input id="AdditionalInfo" name="AdditionalInfo" class="form-control" type="text" maxlength="100" value="@Model.AdditionalInfo" />
                            </div>
                        </div>
                        <input type="text" hidden @Model.MessageId/>

                        <div class="row">
                            @if (hasDigitalFile)
                            {
                                <div class="col-md-6">



                                    
                                    <div class="pt-3">
                                        <a href="/Fulfilment/fileResult?FileId=@Model.DigitalFileId" class="btn btn-dark btn-sm"><i class="fa fa-download"></i>Download your Material</a>
                                    </div>


                                </div>

                            }
                            else
                            {
                                <a href="/Fulfilment/fileResult?FileId=@Model.DigitalFileId" class="btn btn-dark btn-sm"><i class="fa fa-download"></i>Download your Material</a>
                            }



                            @{
                                if (Model.MessageId == 0)
                                {
                                    <a href="/Fulfilment/UploadTvMaterial?transactionId=@Model.transactionId&SentToId=@Model.SentToId" class="pl-4 mt-4  btn btn-success btn-sm">Send Initial Script/Message</a>
                                }
                                else
                                {

                                }
                            }


                            @if (Model.MessageId > 0)
                            {
                                <a href="/Fulfilment/TvMaterialMessageList?SentToId=@Model.SentToId&transactionId=@Model.transactionId&MaterialType=Scr" class="pl-4 mt-4  btn btn-success btn-sm">View SentMessages</a>
                            }
                            else
                            {

                            }


                            @{
                                if (Model.RepliesId == 0 && Model.MessageId == 0)
                                {
                                    <div><p></p></div>
                                    <div class="form-group">
                                        <h6 style="color: red; padding-left: 20px;">No Message sent and Conversation</h6>

                                    </div>
                                }
                                else
                                {
                                    if (Model.MessageId >= 0)
                                    {
                                        <div><p></p></div>
                                        <div class="form-group">
                                            <h6 style="color: green; padding-left: 20px;"> you have 1 message with @Model.RepliesId Conversations</h6>

                                        </div>
                                    }
                                }



                            }

                        </div>



                        <div class="columns" style="margin-top: 10px; width: 100%;">
                            <div class="column">
                                @DisplayHelper.TablePager(Model.TvMaterialTransaction.Count())
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>



        

}

